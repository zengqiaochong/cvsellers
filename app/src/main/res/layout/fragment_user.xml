<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    >
    <!--我的信息页面-->
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/my_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Dark_green"
        >
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/iv_user_msg"
            android:layout_centerVertical="true"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/my_set_img"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/iv_setting"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_title_layout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <RelativeLayout
                android:id="@+id/my_msg_layout"
                android:background="@color/Dark_green"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                >
                <ImageView
                    android:id="@+id/my_user_img"
                    android:layout_marginLeft="40dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/iv_user_head"
                    android:layout_centerVertical="true"
                    />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/my_user_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/my_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="073125642035"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/my_tel_img"
                        android:layout_below="@id/my_name_text"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/iv_phone_white"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_below="@id/my_name_text"
                        android:id="@+id/my_tel_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="154894894"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/iv_arrow_right"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_wallet_layout"
                android:layout_below="@id/my_msg_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/my_wallet_img"
                    android:layout_marginLeft="40dp"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/iv_purse"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/my_wallet_img"
                    android:id="@+id/my_wallet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textColor="@color/gray_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/iv_arrow_right"
                    android:tint="@color/gray_slice"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_income_layout"
                android:layout_below="@id/my_wallet_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:id="@+id/my_income_img"
                    android:layout_marginLeft="40dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/iv_my_income"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/my_income_img"
                    android:id="@+id/my_income_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收入"
                    android:textColor="@color/gray_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/iv_arrow_right"
                    android:tint="@color/gray_slice"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_Service_centre_layout"
                android:layout_below="@id/my_income_layout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"

                >
                <ImageView
                    android:id="@+id/my_Service_centre_img"
                    android:layout_marginLeft="40dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/iv_service"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/my_Service_centre_img"
                    android:id="@+id/my_Service_centre_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务中心"
                    android:textColor="@color/gray_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/iv_arrow_right"
                    android:tint="@color/gray_slice"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_welcome_score_layout"
                android:layout_marginTop="1dp"
                android:layout_below="@id/my_Service_centre_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/my_welcome_score_img"
                    android:layout_marginLeft="40dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/iv_pride"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/my_welcome_score_img"
                    android:id="@+id/my_welcome_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎评分"
                    android:textColor="@color/gray_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/iv_arrow_right"
                    android:tint="@color/gray_slice"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_manual_layout"
                android:layout_marginTop="1dp"
                android:layout_below="@id/my_welcome_score_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/my_manual_img"
                    android:layout_marginLeft="40dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/iv_user_head"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/my_manual_img"
                    android:id="@+id/my_manual_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小区管家手册"
                    android:textColor="@color/gray_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/iv_arrow_right"
                    android:tint="@color/gray_slice"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_ranking_layout"
                android:layout_marginTop="1dp"
                android:layout_below="@id/my_manual_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/my_ranking_img"
                    android:layout_marginLeft="40dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/iv_pride"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/my_ranking_img"
                    android:id="@+id/my_ranking_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的排名"
                    android:textColor="@color/gray_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/iv_arrow_right"
                    android:tint="@color/gray_slice"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
